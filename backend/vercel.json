{
  "version": 2,
  "buildCommand": "node copy-storage.js && echo 'Build completed'",
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.7.4",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "/build/(.*)", "dest": "/public/build/$1" },
    { "src": "/storage/attestati/(.*)", "dest": "/public/storage/attestati/$1", "headers": { "cache-control": "public, max-age=3600" } },
    { "src": "/storage/avatars/(.*)", "dest": "/public/storage/avatars/$1", "headers": { "cache-control": "public, max-age=3600" } },
    { "src": "/storage/(.*)", "dest": "/public/storage/$1" },
    { "src": "/(.*?)\\.(mp4|webm|mov)$", "dest": "/public/$1.$2", "headers": { "cache-control": "no-store, must-revalidate" } },
    { "src": "/(.*?)\\.(jpg|jpeg|png|gif|svg|webp|ico|css|js|woff|woff2|ttf|eot)$", "dest": "/public/$1.$2", "headers": { "cache-control": "public, max-age=31536000, immutable" } },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ],
  "outputDirectory": "public",
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "LOG_LEVEL": "error"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" }
      ]
    }
  ]
}

